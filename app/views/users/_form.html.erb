<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group <%= "error" unless @user.errors[:email].blank? %>">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
      <% if @user.errors[:email] %>
        <% @user.errors[:email].each do |msg| %>
          <span class="help-inline"><%= msg %></span><br>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="control-group <%= "error" unless @user.errors[:password].blank? %>">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
      <% if @user.errors[:password] %>
        <% @user.errors[:password].each do |msg| %>
          <span class="help-inline"><%= msg %></span><br>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group <%= "error" unless @user.errors[:first_name].blank? %>">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
      <% if @user.errors[:first_name] %>
        <% @user.errors[:first_name].each do |msg| %>
          <span class="help-inline"><%= msg %></span><br>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="control-group <%= "error" unless @user.errors[:last_name].blank? %>">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
      <% if @user.errors[:last_name] %>
        <% @user.errors[:last_name].each do |msg| %>
          <span class="help-inline"><%= msg %></span><br>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="control-group <%= "error" unless @user.errors[:role_id].blank? %>">
    <%= f.label :role_id, :class => 'control-label' %>
    <div class="controls">
      <%= select(:user, :role_id, [["Супер адміністратор", 1], ["Адміністратор", 2], ["Користувач", 3]], {:prompt => "Виберіть роль"}) %>      
      <% if @user.errors[:role_id] %>
        <% @user.errors[:role_id].each do |msg| %>
          <span class="help-inline"><%= msg %></span><br>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
