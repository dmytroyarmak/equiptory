<div class="page-header">
  <h1><%=t '.title', :default => 'Профілактика' %></h1>
</div>
<table class="table table-striped">
  <tbody>
    <tr>
      <td>
        <%= t('.tester', :default => t("helpers.links.tester")) %>
      </td>
      <td>
        <%= @tester %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t('.start_datetime', :default => t("helpers.links.start_datetime")) %>
      </td>
      <td>
        <%= l @start_time, :format => :short %>
      </td>
    </tr>
    <tr>
      <td>
  	    <%= t('.location', :default => t("helpers.links.location")) %>
      </td>
      <td>
        <%= @location.name %>
      </td>
    </tr>
  </tbody>
</table>
  <h3><%= t('.equipment_in_loc', :default => t("helpers.links.equipment_in_loc")) %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Equipment.human_attribute_name(:name) %></th>
      <th><%= Equipment.human_attribute_name(:type_id) %></th>
      <th><%= Equipment.human_attribute_name(:state_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= link_to equipment.name, equipment_path(equipment), :target => "_blank" %></td>
        <td><%= equipment.type.name if equipment.type_id %></td>
        <td><%= equipment.state.name if equipment.state_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_equipment_path(equipment, :maintenance => true), :target => "_blank", :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<h3><%= t('.notes', :default => t("helpers.links.notes")) %></h3>
<%= form_tag(:controller => "preventive_maintenance", :action => "finish", :method => "post", :class => "form-horizontal") do %>
<%= text_area_tag 'notes' %><br>
<%= submit_tag t('.finish', :default => t("helpers.links.finish")),
     :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-primary' %>
<% end %>


