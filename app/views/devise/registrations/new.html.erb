<h2>Авторизація</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :email %>
    <div class="controls"><%= f.email_field :email, :class => 'text_field' %></div>
  </div>

  <div class="control-group">
    <%= f.label :password %>
    <div class="controls"><%= f.password_field :password , :class => 'text_field'%></div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation%>
    <div class="controls"><%= f.password_field :password_confirmation, :class => 'text_field' %></div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Створити користувача', :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
