<%= form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group <%= "error" unless @location.errors[:name].blank? %>">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
      <% if @location.errors[:name] %>
        <% @location.errors[:name].each do |msg| %>
          <span class="help-inline"><%= msg %></span><br>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn' %>
  </div>
<% end %>
